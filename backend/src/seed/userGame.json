// userGame model
{
  "_id": "ObjectId",
  "ownerId": "string",
  "title": "string",
  "description": "string",
  "code": "string",
  "createdAt": "Date",
  "updatedAt": "Date",
  "isPublic": "boolean", // để xác định có thể share hay không
  "slug": "string" // ví dụ: "cute-space-shooter" hoặc random id như "game_4x8fjk"
}

// Mục	Hành động
// Backend	Tạo API POST /user-games, GET /user-games/:slug
// DB	Tạo bảng userGames
// Frontend	Thêm nút "Lưu Game" → gửi code + title
// Share	Sau khi lưu, tạo link https://yourgame.com/play/slug
// Chạy game	Tạo trang /play/[slug] dùng GameCanvas
